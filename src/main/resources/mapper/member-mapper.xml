<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		
<mapper namespace="com.depromeet.hay.mapper.MemberMapper">

    <insert id="add" parameterType="com.depromeet.hay.domain.Member">
        INSERT INTO member (email, password) VALUES (#{email}, #{password});
    </insert>
    
    <select id="getByEmail" parameterType="java.lang.String" resultType="com.depromeet.hay.domain.Member">
        SELECT * FROM member WHERE email = #{email};
    </select>
    
    <select id="getById" parameterType="java.lang.Integer" resultType="com.depromeet.hay.domain.Member">
        SELECT * FROM member WHERE id = #{id};
    </select>
    
    <delete id="deleteAll">
        DELETE FROM member;
    </delete>
</mapper>